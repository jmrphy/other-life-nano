---
import { cn } from "@lib/utils";
import { THEME } from "@consts";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  variant?: "navigation" | "homepage";
}

const { href, external, underline = true, variant = "navigation", ...rest } = Astro.props;

// Choose colors based on variant - use default navigation colors for navigation variant
const colors = variant === "homepage" ? THEME.homepage : THEME.navigation.default;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn(`inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 ${colors.links.light} dark:${colors.links.dark} ${colors.hover.light} dark:${colors.hover.dark} transition-colors duration-300 ease-in-out`, underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
